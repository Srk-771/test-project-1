pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                sh 'mvn pom.xml clean package'
            }
            post {
                success {

                    echo "Now Archiving the Artifacts...."
                    sshPublisher publishers: configName: 'Admin', sourceFiles: '**/*.war', remoteDirectory: '.'
                }
            }
        
        }        
    }
}
